<div class="users-show col-xs-9 text-general">

<h1>My profile:</h1>

<div class="profile-text">
  <div>
  Title:
  <%= @user.title %>
  </div>
  <div>Name:
  <%= @user.name %>
  </div>
  <div>Email:
  <%= @user.email %>
  </div>
  <div>Hospital:
  <%= @user.hospital %>
  </div>
  <div>DOB:
  <%= @user.dob %>
  </div>
</div>

<% if current_user == @user %>

  <div class="content-btn">
    <%= button_to "Edit my profile", users_edit_profile_path, method: :get, :class => "btn btn-sm btn-success" %>
  </div>
  <div class="content-btn">
    <%= button_to "Change my password", edit_user_registration_path, method: :get, :class => "btn btn-sm btn-warning" %>
  </div>

<% else %>
<% end %>
